{
  "name": "file-drops",
  "version": "0.6.1",
  "description": "A simple in-browser file drop utility",
  "scripts": {
    "all": "run-s lint test bundle",
    "bundle": "NODE_ENV=production rollup -c --bundleConfigAsCjs",
    "lint": "eslint .",
    "test": "echo \"no tests yet :o)\"",
    "prepublishOnly": "run-s bundle"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./lib/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/nikku/file-drops.git"
  },
  "keywords": [
    "browser",
    "file-drop"
  ],
  "author": {
    "name": "Nico Rehwaldt",
    "url": "https://github.com/nikku"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "^9.32.0",
    "eslint-plugin-bpmn-io": "^2.2.0",
    "npm-run-all2": "^8.0.4",
    "rollup": "^4.46.2"
  },
  "dependencies": {
    "min-dom": "^4.2.1"
  },
  "files": [
    "dist"
  ]
}
